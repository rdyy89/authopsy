           xsi:type="MailApp">
  
  <Id>77777777-6666-5555-4444-333333333333</Id>
  <Version>1.0.4.0</Version>
  <ProviderName>AuthChecker</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <DisplayName DefaultValue="Auth Checker"/>
  <Description DefaultValue="Email authentication checker"/>
  <IconUrl DefaultValue="https://via.placeholder.com/32x32/green/white?text=A"/>
