<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.0" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:type="MailApp">
  <Id>fedcba98-7654-3210-fedc-ba9876543210</Id>
  <Version>1.0.6.0</Version>
  <ProviderName>AuthChecker</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Email Auth Check"/>
  <Description DefaultValue="Check email authentication"/>
  <IconUrl DefaultValue="https://via.placeholder.com/32x32/red/white?text=✓"/>
  <HighResolutionIconUrl DefaultValue="https://via.placeholder.com/64x64/red/white?text=✓"/>
  <SupportUrl DefaultValue="https://cdpn.io"/>
  <AppDomains>
    <AppDomain>https://cdpn.io</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.0"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://cdpn.io/pen/debug/JoYRdvO"/>
        <RequestedHeight>400</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://cdpn.io/pen/debug/JoYRdvO"/>
        <RequestedHeight>400</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="And">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
</OfficeApp>
