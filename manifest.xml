<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailapp="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="MailApp">
  <Id>f8c59154-c901-416d-8a5a-d2d44b1e32b7</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Authopsy</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Authopsy"/>
  <Description DefaultValue="Displays DMARC, DKIM, and SPF results for the selected email."/>
  <IconUrl DefaultValue="https://rdyy89.github.io/authopsy/assets/tick.png"/>
  <HighResolutionIconUrl DefaultValue="https://rdyy89.github.io/authopsy/assets/tick.png"/>
  <SupportUrl DefaultValue="https://github.com/rdyy89/authopsy"/>
  <AppDomains>
    <AppDomain>https://rdyy89.github.io</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://rdyy89.github.io/authopsy/src/taskpane/taskpane.html"/>
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
      <TabletSettings>
        <SourceLocation DefaultValue="https://rdyy89.github.io/authopsy/src/taskpane/taskpane.html"/>
        <RequestedHeight>300</RequestedHeight>
      </TabletSettings>
      <PhoneSettings>
        <SourceLocation DefaultValue="https://rdyy89.github.io/authopsy/src/taskpane/taskpane.html"/>
      </PhoneSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.1">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="FunctionFile.Url"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Menu" id="authDropdownMenu">
                  <Label resid="MenuButton.Label"/>
                  <Supertip>
                    <Title resid="MenuButton.Label"/>
                    <Description resid="MenuButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Items>
                    <Item id="authStatus">
                      <Label resid="AuthStatus.Label"/>
                      <Supertip>
                        <Title resid="AuthStatus.Label"/>
                        <Description resid="AuthStatus.Tooltip"/>
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon.16x16"/>
                        <bt:Image size="32" resid="Icon.32x32"/>
                        <bt:Image size="80" resid="Icon.80x80"/>
                      </Icon>
                      <Action xsi:type="ShowTaskpane">
                        <SourceLocation resid="Taskpane.Url"/>
                      </Action>
                    </Item>
                    <Item id="dmarcStatus">
                      <Label resid="DmarcStatus.Label"/>
                      <Supertip>
                        <Title resid="DmarcStatus.Label"/>
                        <Description resid="DmarcStatus.Tooltip"/>
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon.16x16"/>
                        <bt:Image size="32" resid="Icon.32x32"/>
                        <bt:Image size="80" resid="Icon.80x80"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>showDmarcDetails</FunctionName>
                      </Action>
                    </Item>
                    <Item id="dkimStatus">
                      <Label resid="DkimStatus.Label"/>
                      <Supertip>
                        <Title resid="DkimStatus.Label"/>
                        <Description resid="DkimStatus.Tooltip"/>
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon.16x16"/>
                        <bt:Image size="32" resid="Icon.32x32"/>
                        <bt:Image size="80" resid="Icon.80x80"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>showDkimDetails</FunctionName>
                      </Action>
                    </Item>
                    <Item id="spfStatus">
                      <Label resid="SpfStatus.Label"/>
                      <Supertip>
                        <Title resid="SpfStatus.Label"/>
                        <Description resid="SpfStatus.Tooltip"/>
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon.16x16"/>
                        <bt:Image size="32" resid="Icon.32x32"/>
                        <bt:Image size="80" resid="Icon.80x80"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>showSpfDetails</FunctionName>
                      </Action>
                    </Item>
                  </Items>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://rdyy89.github.io/authopsy/assets/tick.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://rdyy89.github.io/authopsy/assets/tick.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://rdyy89.github.io/authopsy/assets/tick.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="FunctionFile.Url" DefaultValue="https://rdyy89.github.io/authopsy/src/commands/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://rdyy89.github.io/authopsy/src/taskpane/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="🔒 Email Security"/>
        <bt:String id="MenuButton.Label" DefaultValue="🔐 Auth Status"/>
        <bt:String id="AuthStatus.Label" DefaultValue="📊 Full Report"/>
        <bt:String id="DmarcStatus.Label" DefaultValue="🛡️ DMARC: Checking..."/>
        <bt:String id="DkimStatus.Label" DefaultValue="🔑 DKIM: Checking..."/>
        <bt:String id="SpfStatus.Label" DefaultValue="📧 SPF: Checking..."/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="MenuButton.Tooltip" DefaultValue="Check email authentication status - click to see individual results"/>
        <bt:String id="AuthStatus.Tooltip" DefaultValue="View detailed authentication report"/>
        <bt:String id="DmarcStatus.Tooltip" DefaultValue="DMARC authentication details"/>
        <bt:String id="DkimStatus.Tooltip" DefaultValue="DKIM signature verification details"/>
        <bt:String id="SpfStatus.Tooltip" DefaultValue="SPF sender verification details"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
