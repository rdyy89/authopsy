<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="MailApp">

  <Id>a13791da-e8e7-4e8d-99e7-5ac3c40de1bb</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Email Security Tools</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Email Authentication Check" />
  <Description DefaultValue="Displays SPF, DKIM, and DMARC authentication status for emails" />
  
  <IconUrl DefaultValue="https://via.placeholder.com/32x32/0078d4/ffffff?text=E" />
  <HighResolutionIconUrl DefaultValue="https://via.placeholder.com/64x64/0078d4/ffffff?text=E" />
  <SupportUrl DefaultValue="https://rdyy89.github.io/authopsy/" />

  <AppDomains>
    <AppDomain>https://rdyy89.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://rdyy89.github.io/authopsy/" />
        <RequestedHeight>500</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

</OfficeApp>
